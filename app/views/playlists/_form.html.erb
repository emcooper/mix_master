<%= form_for @playlist do |f| %>
  <%= f.text_field :name %>
  <% @songs.each do |song| %>
    <div>
      <% checked = (true if @playlist.songs.include?(song)) || false%>
      <%= check_box_tag(:song_ids, song.id, checked, :name => 'playlist[song_ids][]', id: "song-#{song.id}") %>
      <%= song.title %>
    </div>
<% end %>
<%= f.submit %>
<% end %>
